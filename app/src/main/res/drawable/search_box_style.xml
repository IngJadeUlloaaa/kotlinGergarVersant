<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo blanco -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0000" /> <!-- Color de fondo -->
            <corners android:radius="10dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
    <!-- Sombra negra -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffff" /> <!-- Color de la sombra -->
            <corners android:radius="10dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
</layer-list>